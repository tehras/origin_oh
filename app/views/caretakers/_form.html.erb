<%= f.label :last_name %>
<%= f.text_field :last_name, :class => 'form-control', :id => 'expand-form' %>

<%= f.label :email %>
<%= f.text_field :email, :class => 'form-control', :id => 'expand-form', :required => false %>

<%= f.label :age %>
<%= f.text_field :age, :class => 'form-control', :id => 'expand-form', :required => false %>

<%= f.label :nationality %>
<%= f.text_field :nationality, :class => 'form-control', :id => 'expand-form', :required => false %>

<%= f.label :comment %>
<%= f.text_area :comment, :class => 'form-control', :id => 'expand-form', :required => false %>

<br />
