<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical', :role => 'form'}) do |f| %>
    <h2>Sign up</h2>
    <%= f.error_notification %>
    <%= display_base_errors resource %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocused => true, :placeholder => "John Doe", :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :required => true, :placeholder => "example@mail.com", :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password, :type => 'password', :required => true, :placeholder => "Password", :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.text_field :password_confirmation, :type => 'password', :required => true, :placeholder => "Re-Enter Password", :class => 'form-control' %>
    </div>
    <%= f.button :submit, 'Sign up', :class => 'btn-default' %>
    <div class="below-submit">
      <%= link_to "Sign in", new_session_path(resource_name) %>
      <br/>
    </div>
<% end %>


